{% extends 'base.html.twig' %}

{% block title 'Benn Real Estate Co' %}

{% block body %}

	<div class="jumbotron text-center">
		<h1>Welcome to your Real Estate Company</h1>
	</div>

	<div class="container">
		<h2>The latest Properties</h2>
		<div class="row flex">

			{% for property in properties %}
				<div class="col-3">
					<div class="card bg-light">
						<div class="card-body">
							<h5 class="card-title">
								<a href="{{path('property.show', {id:property.id, slug:property.slug})}}">
									{{ property.title}}
								</a>
							</h5>
							<p class="card-text">
								{{property.city}}
								{{property.postalcode}}
							</p>
							<div class="text-primary" style="font-weight: bold; font-size: 2rem;">
								{{ property.formattedPrice()}}
								$
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
